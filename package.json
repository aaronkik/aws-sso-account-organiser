{
  "name": "aws-sso-account-filter",
  "version": "2024.7.10.1635",
  "author": "Aaron Kikabhai",
  "description": "A browser extension that reduces the list of AWS SSO accounts via custom regex filters",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "is-ci || husky",
    "dev": "vite",
    "build:background": "vite build -c ./vite.background.config.ts",
    "build:actions": "vite build -c ./vite.actions.config.ts",
    "prebuild": "tsc --noEmit",
    "build": "npm run build:actions && npm run build:background",
    "local:clean:build": "rm -rf ./dist && npm run build",
    "lint": "prettier --check . && eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@fontsource/inter": "5.0.19",
    "@headlessui/react": "1.7.18",
    "@heroicons/react": "2.1.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.52.1",
    "tailwind-merge": "2.4.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.7",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/react": "16.0.0",
    "@testing-library/user-event": "14.5.2",
    "@types/chrome": "0.0.268",
    "@types/node": "20.8.8",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "@vitejs/plugin-react": "4.3.1",
    "@vitest/coverage-v8": "1.6.0",
    "autoprefixer": "10.4.19",
    "cssnano": "7.0.4",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.34.3",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.7",
    "postcss": "8.4.39",
    "prettier": "3.3.2",
    "prettier-plugin-tailwindcss": "0.6.5",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.3",
    "vite": "5.3.3",
    "vitest": "1.6.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint"
  },
  "volta": {
    "node": "20.13.1",
    "npm": "10.8.1"
  }
}
