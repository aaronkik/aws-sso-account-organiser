{
  "name": "aws-sso-account-filter",
  "version": "2024.11.28.1856",
  "author": "Aaron Kikabhai",
  "description": "A browser extension that reduces the list of AWS SSO accounts via custom regex filters",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "is-ci || husky",
    "dev": "vite",
    "build:background": "vite build -c ./vite.background.config.ts",
    "build:actions": "vite build -c ./vite.actions.config.ts",
    "prebuild": "tsc --noEmit",
    "build": "npm run build:actions && npm run build:background",
    "local:clean:build": "rm -rf ./dist && npm run build",
    "lint": "prettier --check . && eslint . --ext .ts,.tsx",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@fontsource/inter": "5.1.0",
    "@headlessui/react": "1.7.18",
    "@heroicons/react": "2.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "7.53.2",
    "tailwind-merge": "2.5.5"
  },
  "devDependencies": {
    "@tailwindcss/forms": "0.5.9",
    "@testing-library/jest-dom": "6.6.3",
    "@testing-library/react": "16.0.1",
    "@testing-library/user-event": "14.5.2",
    "@types/chrome": "0.0.284",
    "@types/node": "22.9.4",
    "@types/react": "18.3.8",
    "@types/react-dom": "18.3.0",
    "@typescript-eslint/eslint-plugin": "8.16.0",
    "@typescript-eslint/parser": "8.16.0",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "2.1.5",
    "autoprefixer": "10.4.20",
    "cssnano": "7.0.6",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "9.1.7",
    "is-ci": "3.0.1",
    "jsdom": "24.1.3",
    "lint-staged": "15.2.10",
    "postcss": "8.4.49",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.9",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vite": "5.4.11",
    "vitest": "2.1.5"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{ts,tsx}": "eslint"
  },
  "volta": {
    "node": "22.11.0",
    "npm": "10.9.1"
  }
}
